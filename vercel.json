{
  "functions": {
    "api/daily-run.js": {
      "memory": 512,
      "maxDuration": 60
    }
  },
  "cron": [
    {
      "path": "/api/daily-run",
      "schedule": "0 14 * * *"  // 9 AM EST
    },
    {
      "path": "/api/daily-run",
      "schedule": "0 18 * * *"  // 1 PM EST
    },
    {
      "path": "/api/daily-run",
      "schedule": "0 22 * * *"  // 5 PM EST
    }
  ]
}
